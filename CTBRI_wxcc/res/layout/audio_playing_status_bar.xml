<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@drawable/pindao_bg" ><!--pindaosuoxiao_bg-->

    <TextView
        android:id="@+id/tv_program_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:drawableLeft="@drawable/icon_yinpinzhengzaibofang"
        android:drawablePadding="4dp"
        android:singleLine="true"
        android:layout_toLeftOf="@+id/btn_pause"
        style="@style/textview.audio_channel"
        android:textSize="12sp" />

    <ImageButton
        android:id="@+id/btn_pause"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@null"
   		android:layout_marginRight="11dp"
        android:src="@drawable/audio_play" />

</RelativeLayout>