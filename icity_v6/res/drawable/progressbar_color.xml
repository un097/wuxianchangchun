<?xml version="1.0" encoding="UTF-8"?>
<!-- layer-list 可以将多个图片按照顺序层叠起来 -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:angle="180"
                android:endColor="@color/gray_f4f4f4"
                android:startColor="@color/gray_f4f4f4" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <gradient
                    android:angle="270"
                    android:endColor="@color/gray_f4f4f4"
                    android:startColor="@color/gray_f4f4f4" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:angle="180"
                    android:endColor="@color/blue_bbeeff"
                    android:startColor="@color/blue_0799ea" />
            </shape>
        </clip>
    </item>
</layer-list>