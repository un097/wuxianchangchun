<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/popwin_top" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/popwin_left" />

        <ListView
            android:id="@+id/pop_list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/white"
            android:cacheColorHint="@color/transparent"
            android:divider="@color/poplist_line"
            android:dividerHeight="0.5dip"
            android:fadingEdge="none"
            android:scrollbars="none" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/popwin_right" />
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="5dip"
        android:background="@drawable/popwin_bottom" />

</LinearLayout>