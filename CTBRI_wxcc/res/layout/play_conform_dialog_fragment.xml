<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="96.0dp"
    android:background="@android:color/white" >

    <TextView
         android:id="@+id/play_conform_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:alpha="0.56"
        android:padding="16.0dp"
        android:text="现在不是Wifi网络，可能会消耗流量产生费用。"
        android:textColor="@android:color/black"
        android:textSize="16.0dp" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dp" 
        android:layout_below="@+id/play_conform_text"
        android:background="#eeeeee"/>

    <Button
        android:id="@+id/play_conform_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="76.0dp"
        android:alpha="0.56"
        android:background="@android:color/white"
        android:padding="16.0dp"
        android:text="确定"
        android:textColor="@color/black" />

</RelativeLayout>