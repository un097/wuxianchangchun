<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55.0dp"
    android:background="#fbfbfb" >

    <ImageView
        android:id="@+id/action_bar_left_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:paddingRight="16.0dp"
        android:paddingLeft="16.0dp"
        android:src="@drawable/button_selector_cancel" />
    <TextView android:id="@+id/action_bar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20.0sp"
        android:text="title"
        android:layout_centerInParent="true"
        android:textColor="@color/text_color_title"/>
     <ImageView
        android:id="@+id/action_bar_right_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingRight="16.0dp"
        android:paddingLeft="16.0dp" 
        android:src="@drawable/common_icon_confirm_unpressed"/>

</RelativeLayout>