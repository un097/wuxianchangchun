<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/background_color"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <include layout="@layout/top" />

    <include layout="@layout/inc_loading_bar" />

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/glo_banner_empty"
                style="@style/Glo_Gray_9e9e9e.16sp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/glo_banner_empty"
                android:visibility="gone" />

            <ListView
                android:id="@+id/glo_banner_listview"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:cacheColorHint="@color/transparent"
                android:dividerHeight="0dip"
                android:divider="@color/transparent"
                android:fadingEdge="none"
                android:gravity="center"
                android:listSelector="@color/transparent"
                android:scrollbars="none" >
            </ListView>
        </RelativeLayout>

        <include layout="@layout/top_shadow" />
    </FrameLayout>

</LinearLayout>