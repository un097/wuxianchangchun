<?xml version="1.0" encoding="UTF-8"?>
<!-- layer-list 可以将多个图片按照顺序层叠起来 -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 图片1 -->
    <item
        android:id="@android:id/background"
        android:drawable="@drawable/top_progress_bar_bg">
    </item>
    <!-- 图片2 -->

    <item
        android:id="@android:id/progress"
        android:left="10dip">
        <bitmap android:src="@drawable/top_progress_bar" />
    </item>

</layer-list>