<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/download_root_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/setting_list_down_selector" >

    <RelativeLayout
        android:id="@+id/icon_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="10dip" >

        <ImageView
            android:layout_width="48.0dip"
            android:layout_height="48.0dip"
            android:layout_centerInParent="true"
            android:background="@drawable/btn_blue_selector"
            android:contentDescription="@null" />

        <ImageView
            android:id="@+id/download_child_item_pic"
            android:layout_width="30.0dip"
            android:layout_height="30.0dip"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_default"
            android:contentDescription="@null" />
    </RelativeLayout>

    <TextView
        android:id="@+id/download_child_item_name"
        style="@style/gray_title.16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="3dip"
        android:layout_toLeftOf="@+id/download_child_item_size"
        android:layout_toRightOf="@id/icon_layout"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true" />

    <Button
        android:id="@+id/download_child_install_btn"
        style="@style/white_title.14sp"
        android:layout_width="80dip"
        android:layout_height="25dip"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="7dip"
        android:layout_marginRight="10dip"
        android:background="@drawable/btn_blue_selector"
        android:clickable="true"
        android:text="@string/download_install" />

    <TextView
        android:id="@+id/download_child_item_size"
        style="@style/gray_title.16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="2dip"
        android:layout_marginRight="2dip"
        android:layout_toLeftOf="@id/download_child_install_btn"
        android:singleLine="true" />

</RelativeLayout>