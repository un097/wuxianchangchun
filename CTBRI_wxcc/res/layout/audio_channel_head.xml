<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/audio_live_head_height" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/audio_live_head_height"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/pindao_bg" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_channels"
        android:layout_width="match_parent"
        android:layout_height="@dimen/audio_live_head_height"
        android:fadingEdge="none" >
    </android.support.v4.view.ViewPager>

    <View
        android:id="@+id/iv_channel_points"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginBottom="5dp"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/iv_channel_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="100dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/pindao_zhizhen" />

    <ImageView
        android:id="@+id/img_previous"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:paddingLeft="8dp"
        android:paddingRight="16dp"
        android:src="@drawable/audio_left"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/img_next"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingLeft="16dp"
        android:paddingRight="8dp"
        android:src="@drawable/audio_right"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/ibtn_play"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="25dp"
        android:background="@null"
        android:scaleType="center"
        android:src="@drawable/audio_status_bar_play_selector"
         />

</RelativeLayout>