<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical" >
    <!-- android:background="@drawable/bg_city" -->

    <include layout="@layout/top" />

    <include layout="@layout/top_shadow" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_marginTop="10.0dip"
            android:background="@drawable/input_background" >

            <EditText
                android:id="@+id/old_pwd"
                style="@style/lightgray16sp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:hint="@string/person_center_oldpsw"
                android:inputType="textPassword"
                android:paddingLeft="5dp"
                android:singleLine="true" 
                android:maxLength="20"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_marginTop="10.0dip"
            android:background="@drawable/input_background" >

            <EditText
                android:id="@+id/new_pwd"
                style="@style/lightgray16sp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:hint="@string/person_center_pwd_valid"
                android:inputType="textPassword"
                android:paddingLeft="5dp"
                android:singleLine="true" 
                android:maxLength="20"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_marginTop="10.0dip"
            android:background="@drawable/input_background" >

            <EditText
                android:id="@+id/retry_pwd"
                style="@style/lightgray16sp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:hint="@string/person_center_retrypsw"
                android:inputType="textPassword"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:maxLength="20" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50.0dip"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:layout_marginTop="10.0dip" >

            <Button
                android:id="@+id/user_pws_btn_save"
                style="@style/ButtonBlue.White.18sp"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:layout_gravity="center_vertical"
                android:background="@drawable/pink_button_selector"
                android:paddingLeft="5dp"
                android:text="@string/person_center_change_name_save" />
            <!-- android:background="@drawable/btn_blue_selector" -->
        </LinearLayout>
    </LinearLayout>

</LinearLayout>